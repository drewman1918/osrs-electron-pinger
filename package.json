{
  "name": "osrs-pinger",
  "productName": "OSRS Pinger",
  "version": "0.0.1",
  "description": "A minimal Electron OSRS server latency checker.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac --win"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Drew Bloomfield",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-packager": "^12.1.1",
    "electron-builder": "^20.28.3"
  },
  "dependencies": {
    "node-http-ping": "^0.3.1"
  },
  "build": {
    "appId": "OSRSPinger",
    "productName": "OSRS Pinger",
    "mac": {
      "category": "productivity"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  }
}
